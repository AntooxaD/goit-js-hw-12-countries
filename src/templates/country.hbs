<div class="country-card">
    <h1 class="country-name">{{name}}</h1>
    <div class="country">
        <div class="country-text">
        <p class="country-item">Capital: {{capital}}</p>
        <p class="country-item">Population: {{population}}</p>
        <p class="country-item">Languages: <ul class="country-languages">
            {{#each this.languages}}
            <li class="country-language">{{name}}</li>
            {{/each}}
        </ul></p>       
        </div>
        <div >
            <img class="country-flag-img" src="{{flag}}" alt="flag" >
        </div>
    </div> 
</div>